<form action="results">
  <div>
    <label for="apr_input">APR</label>
    <input type="text" name="user_apr" id="apr_input" placeholder="E.g. 5.42">
  </div>

  <div>
    <label for="year_input">Number of years</label>
      <input type="text" name="user_years" id="year_input" placeholder="How many years to repay?">
  </div>

  <div>
    <label for="pv_input">Principal</label>
      <input type="text" name="user_pv" id="pv_input" placeholder="How much principal?">
  </div>

  <div>
    <button>Calculate monthly payment</button>
  </div>

</form>
